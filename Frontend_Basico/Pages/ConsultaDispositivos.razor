@page "/ConsultaDispositivos"

<EditForm Model="dispositivos">
    <DataAnnotationsValidator/>

    <div class="card align-items-inherit bg-dark mb-5" style="width: 40rem;">

        <div class="card mb-3 bg-secondary">

            <div class="card-header bg-dark">
                <h3 class="text-white">Consulta de Dispositivos</h3>
            </div>

            <div class="card-body">
            
                <form>
                    <div class="input-group d-flex align-items-end">
    
                        <select class="form-select" aria-label="Default select example" @bind="Filtro">
                            <option selected disabled value="">Selecciona...</option>
                            <option value="1">Id</option>
                            <option value="2">Marca</option>
                            <option value="3">Modelo</option>
                            <option value="4">Teclado</option>
                        </select>
                        

                        @if (Filtro == "1")
                        {
                            <div class = "flex-fill mx-2">
                                <InputNumber class="form-control" @bind-Value=CriterioId/>
                            </div>
                            
                        }else if(Filtro == "4"){
                            
                            <div class = "flex-fill mx-2">
                                @* <InputCheckbox class="form-control" @bind-Value=CriterioTeclado/> *@
                                @* <input type="checkbox" class="custom-control-input" style="margin-top: 0.35rem;" id="customControlAutosizing" @bind-value="CriterioTeclado"> *@

                                @* <div class="input-group-prepend"> *@
                                    <div class="input-group-text align-center">
                                    <input type="checkbox" @bind-value="CriterioTeclado">
                                    </div>
                                @* </div> *@

                            </div>

                        }else{

                            <div class = "flex-fill mx-2">
                                <InputText class="form-control" @bind-Value=CriterioTexto/>
                            </div>

                        }


                        <div class="input-group-append">
                            <button type="button" class="btn btn-dark input-group-text" > @* @onclick="Buscar" *@
                                <span class="oi oi-magnifying-glass" title="magnifying-glass" aria-hidden="true"></span>
                            </button>
                        </div>
                        
                    </div>
                </form>

            </div>

            <table class="table table-light">
                <thead class="thead">
                    <tr class="table m-3">
                        <th>Id</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>IMEI</th>
                        <th>Color</th>
                        <th>Teclado Fisico</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dispositivo in dispositivos)
                    {
                        <tr>
                            <td>@dispositivo.DispositivoId</td>
                            <td>@dispositivo.Marca</td>
                            <td>@dispositivo.Modelo</td>
                            <td>@dispositivo.IMEI</td>
                            <td>@dispositivo.Color</td>
                            <td>@dispositivo.Teclado</td>

                            <td>
                                <span class="btn btn-sm btn-secondary oi oi-ban" href="#">
                                    Remover
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
        </div>

    </div> 
    
</EditForm>

@code {

    List<Dispositivo> dispositivos = new List<Dispositivo>();

    public string Filtro;

    public int CriterioId;

    public string CriterioTexto;

    public bool CriterioTeclado;

    void Guardar(){

    }
    
}
